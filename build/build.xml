<?xml version="1.0" encoding="UTF-8"?>
<project name="PHPFrame-1.0" basedir="." default="build">
	
	<fileset dir="../src" id="codefiles">
		<include name="**" />
	</fileset>
	
	<fileset dir="../tests" id="testfiles">
		<include name="PHPFrameTest.php"/>
	</fileset>

	<property name="report.dir" value="${project.basedir}/report"/>
	<property name="dist.dir" value="${project.basedir}/dist"/>
  
	<!-- This target checks for PHP syntax errors in all source files
	<target name="checkphp">
	  <apply executable="php" failonerror="true">
	    <arg value="-l" />
	    <fileset dir="${basedir}/src">
	      <include name="**/*.php" />
	    </fileset>
	  </apply>
	</target>
	-->
   
	<!-- This target checks Coding Standards (CS) using PHP_CodeSniffer -->
	<target name="phpcs">
		<exec 
			command="phpcs --report=checkstyle --standard=PEAR src/PHPFrame" 
			dir="${project.basedir}" 
			output="${report.dir}/phpcs.xml" />
	</target>
  
	<!-- This target creates a PHAR archive grouping all PHPFrame files into a single .phar file 
	<target name="phar">
	  <exec executable="php" dir="${basedir}" failonerror="on">
	      <arg line="makepackage.php" />
	  </exec> 
	</target>
	-->
	
	<!-- Prepare directories -->
	<target name="prepare">
		<mkdir dir="${report.dir}"/>
		<mkdir dir="${dist.dir}"/>
	</target>
	
	<!-- Run PHPUnit tests -->
	<target name="test">
		<phpunit haltonfailure="true" printsummary="true">
			<batchtest>
				<fileset refid="testfiles" />
			</batchtest>
			<formatter type="xml" todir="${report.dir}" outfile="logfile.xml"/>
		</phpunit>
	</target>
	
	<!-- Create archive for distribution -->
	<target name="tar">
		<tar 
			destfile="${dist.dir}/${xinc.project.name}-${xinc.build.label}.tar.gz" 
			compression="gzip">
			<fileset refid="codefiles" />
		</tar>
	</target>
	
	<!-- Generate build report -->
	<target name="generate-report">
		<phpunit2report 
			infile="${report.dir}/logfile.xml" 
			styledir="resources/xsl" 
			todir="report" 
			format="noframes" />
	</target>
	
	<!-- Build project -->
	<target name="build" depends="prepare,test,tar" />
  
	<!-- Generate documentation from Javadoc comments using phpdoc -->
	<target name="php-documentor">
	
	</target>

</project>
